{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,

    "rootDir": "src",
    "outDir": "dist",

    "typeRoots": ["./types", "./node_modules/@types"],
    "types": ["node", "express", "express-session"]
  },
  "include": ["src", "types"],
  "exclude": ["node_modules", "dist"]
}
